{
  "manifest_version": 2,
  "name": "Scratch Warner",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://scratch.mit.edu/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16":  "assets/icon.png",
    "48":  "assets/icon.png",
    "128":  "assets/icon.png"
  }
}
